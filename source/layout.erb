    <%= javascript_include_tag 'jquery-1.7.1.min.js' %>
    <%= javascript_include_tag 'waypoints.min.js' %>
    <script type="text/javascript">
      $(function(){
        $('#sidebar').waypoint(function(event,direction){ 
          $('.toc').toggleClass('sticky', direction === "down");
