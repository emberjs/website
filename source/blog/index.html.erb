---
title: "Blog"
responsive: true
pageable: true
per_page: 10
---

<% partial_for :head, 'head' %>
<% partial_for :sidebar, 'sidebar' %>
<h1>Ember Blog</h1>
<% page_articles.each_with_index do |article, i| %>
  <article class="blog-post-summary">
    <h2 class="blog-post-title"><%= link_to article.title, article %> <time><%= article.date.strftime('%b %d, %Y') %></time></span></h2>
    <% if article.data.guestPost %>
      <span class="post-tag">Guest Post</span>
    <% elsif article.data.syndicatedPost %>
      <span class="post-tag">Syndicated Post</span>
    <% end %>
    <% if article.data.author %>
      <p class="blog-post-summary-author">
        Posted By: <%= article.data.author %>
      </p>
    <% end %>
    <%= article.summary %>
    <%= link_to "Read more...", article, :class => "read-more" %>
    <% if article.data.syndicatedPost %>
    <h5 class="original-post-url">
      Original Posted at: <%= link_to(article.data.url, article.data.url) %>
    </h5>
    <% end %>
  </article>
<% end %>

<div class="pagination">
   <% if prev_page %>
      <a class="newer-posts" href="<%= prev_page.url %>">Newer articles</a>
    <% end %>
   <p class="page-number">Page <%= page_number %> of <%= num_pages %></p>
    <% if next_page %>
      <a class="older-posts" href="<%= next_page.url %>">Older articles</a>
    <% end %>
</div>
