<table>
  <tr>
    <th>Date</th>
    <th>Subject</th>
    <th>From</th>
    <th>To</th>
  </tr>

  {{#each model.messages as |message|}}
    {{#link-to "mail" message tagName="tr"}}
      <td>{{date message.date}}</td>
      <td>{{message.subject}}</td>
      <td>{{message.from}}</td>
      <td>{{message.to}}</td>
    {{/link-to}}
  {{/each}}
</table>

{{outlet}}
